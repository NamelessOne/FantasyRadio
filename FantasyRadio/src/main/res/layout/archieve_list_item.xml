<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:gravity="center"
    android:padding="4dp">

    <TextView
        android:id="@+id/ArchieveItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/ArchieveItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ArchieveItemTime"
        android:layout_toLeftOf="@+id/archieveItemDownloadButton"/>

    <ImageView
        android:id="@+id/archieveItemDownloadButton"
        style="@style/PlayerControl"
        android:layout_gravity="center_vertical"
        android:src="@drawable/download_states"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>