<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/program_background"
    android:orientation="vertical"
    android:padding="8dp">

    <Button
        android:id="@+id/schedule_refresh_button"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/refresh_states"
        android:padding="4dp"
        android:textColor="@color/refresh_button_text_color"
        android:text="@string/refresh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <ExpandableListView
            android:id="@+id/ScheduleListView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:dividerHeight="1dp"
            android:groupIndicator="@null" />
    </LinearLayout>
</LinearLayout>