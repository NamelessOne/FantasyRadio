<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/program_background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/archieve_refresh_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/refresh_states"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/refresh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/main_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/archive_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/archieve_text" />

        <ListView
            android:id="@+id/ArchieveListView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="380"
            android:cacheColorHint="#00000000"
            android:dividerHeight="1dp"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>