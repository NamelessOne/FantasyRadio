<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sigil.fantasyradio"
    android:hardwareAccelerated="false"
    android:installLocation="auto"
    android:versionCode="133"
    android:versionName="1.33">

    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="ru.sigil.fantasyradio.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="ru.sigil.fantasyradio.permission.C2D_MESSAGE" />


    <application
        android:name="MyApp"
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".settings.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main" />
        <activity android:name="com.lamerman.FileDialog" />
        <activity
            android:name=".TabHoster"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/about"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".Gratitude"
            android:label="@string/gratitude"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <receiver android:name=".utils.AlarmReceiever" />
        <receiver android:name=".widget.FantasyRadioWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/example_appwidget_info" />
        </receiver>

        <receiver android:name=".FantasyRadioNotificationReceiver" />
        <receiver android:name=".PhoneStateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
    </application>
</manifest>